{
  "name": "thelinkedpeople-monday.com-integration",
  "version": "0.1.0",
  "description": "A TheLinkedPeople webhook client that integrates with Monday.com.",
  "main": "dist/index.js",
  "scripts": {
    "start": "nodemon server/index.ts | pino-pretty",
    "debug": "nodemon --exec \"node -r ts-node/register --inspect-brk\" server/index.ts | pino-pretty",
    "expose": "ngrok http 3000",
    "compile": "ts-node build.ts && tsc",
    "lint": "eslint -c .eslintrc.js \"{server, test}/**/*.{js,ts,tsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "APP_PORT=4000 LOG_ENABLED=false mocha -r ts-node/register server/**/*.test.ts --exit --require ts-node/register --full-trace --timeout 2000 --bail",
    "test:watch": "npm run test -- --watch-extensions ts --watch -R min",
    "test:debug": "npm run test -- --inspect-brk",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
    "prepare": "husky install",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "engines": {
    "node": ">=16"
  },
  "standard-version": {
    "skip": {
      "tag": true
    }
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^14.0.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.13.3",
    "monday-sdk-js": "^0.1.3",
    "pino": "^7.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/monday-sdk-js": "^0.1.3",
    "@types/node": "^17.0.8",
    "@types/pino": "^7.0.4",
    "@types/request": "^2.48.8",
    "@types/shelljs": "^0.8.9",
    "@types/sinon": "^10.0.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "chai": "^4.3.4",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "mocha": "^9.0.0",
    "ngrok": "^4.2.2",
    "nock": "^13.2.2",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "pino-pretty": "^7.2.0",
    "prettier": "^2.5.0",
    "request": "^2.88.2",
    "shelljs": "^0.8.4",
    "sinon": "^12.0.1",
    "standard-version": "^9.3.2",
    "supertest": "^6.1.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "author": "David Milanese <milanese.david@gmail.com>"
}
